            <Button VerticalAlignment="Top" x:Name="btn_SearchFolder" Content="Buscar Pasta" Height="20" Background="Chartreuse" Click="btn_SearchFolder_Click"/>
            <ListView VerticalAlignment="Bottom" MinHeight="250" x:Name="ListViewImagens" Background="Coral"/>
        </Grid>

        <Grid Width="150" HorizontalAlignment="Right" Background="DeepSkyBlue">

        </Grid>
    </Grid>
</Window>
